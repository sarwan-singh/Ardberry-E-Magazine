            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/gallery_most_liked_0"
                    android:layout_width="match_parent"
                    app:cardCornerRadius="12dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    app:cardElevation="10dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:scaleType="fitXY"
                            android:id="@+id/gallery_image_most_liked_0" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="-20dp">

                            <com.airbnb.lottie.LottieAnimationView
                                android:layout_width="0dp"
                                android:layout_height="35dp"
                                app:lottie_autoPlay="false"
                                android:layout_marginTop="10dp"
                                app:lottie_fileName="heart5.json"
                                android:layout_weight="1"
                                app:lottie_loop="false"
                                android:id="@+id/like_gallery_most_liked_0"
                                />
                            <com.airbnb.lottie.LottieAnimationView
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                app:lottie_autoPlay="true"
                                app:lottie_loop="true"
                                app:lottie_fileName="read.json"
                                android:layout_weight="1"
                                android:id="@+id/read_gallery_most_liked_0"
                                />
                            <com.airbnb.lottie.LottieAnimationView
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                app:lottie_autoPlay="false"
                                app:lottie_fileName="watchlater.json"
                                android:layout_weight="1"
                                app:lottie_loop="false"
                                android:id="@+id/watchlater_gallery_most_liked_0"
                                />


                        </LinearLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/no_of_likes__most_liked_0"
                            android:text="0 likes"
                            android:gravity="center"
                            android:layout_marginTop="-10dp"
                            android:layout_marginBottom="3dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/lato_light"
                            />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <TextView
