    android:layout_height="match_parent"
    tools:context=".MostLikedBooks">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/most_liked_magazines"
        android:fontFamily="@font/lato"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="3dp"
        android:textSize="17sp"
        android:visibility="visible"
        android:layout_marginTop="25dp"
        android:textColor="#000000"
        android:id="@+id/Most_liked_text"
        android:layout_marginStart="20dp" />


    <View
        android:layout_width="178dp"
        android:layout_height="2dp"
        android:layout_below="@id/Most_liked_text"
        android:background="@drawable/underline_layout"
        android:layout_marginLeft="20dp"
        android:id="@+id/Most_liked_text_underline"
        />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Most_liked_text_underline"
        android:layout_marginTop="20dp"

        >
